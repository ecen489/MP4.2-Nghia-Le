<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:columnCount="1">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:gravity="right"
        android:text=""
        android:textSize="80sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickSeven"
            android:text="7"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickEight"
            android:text="8"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickNine"
            android:text="9"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickDivide"
            android:text="%"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:backgroundTint="#EEEEEE">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickFour"
            android:text="4"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickFive"
            android:text="5"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickSix"
            android:text="6"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickMult"
            android:text="X"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickOne"
            android:text="1"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickTwo"
            android:text="2"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickThree"
            android:text="3"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickMinus"
            android:text="-"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickZero"
            android:text="0"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:onClick="clickDot"
            android:text="."
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickClear"
            android:text="C"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickEqual"
            android:text="="
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="clickPlus"
            android:text="+"
            android:textSize="60sp"
            app:backgroundTint="#EEEEEE" />
    </LinearLayout>
</GridLayout>